      <%= f.label :firstname %><br />
      <%= f.text_field :firstname %>
    </div>
    <div class="field">
      <%= f.label :lastname %><br />
      <%= f.text_field :lastname %>
    </div>
    <div class="field">
      <%= f.label :dob %><br />
      <%= f.date_select :dob %>
    </div>
    <div class="actions pull-right">
      <%= f.submit(:class => 'button') %>
    </div>
  <% end %>
</fieldset>