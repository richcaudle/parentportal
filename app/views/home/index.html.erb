<% if is_logged_in %>
	<div class="hero-unit">
	  <h1>Welcome</h1>
	  <p>You're now logged in to <%= APP_NAME %>. From here you can create, update and manage your learning jounals.</p>
	</div>
	<h2>Children</h2>
	<%= render "shared/child_list" %>

<% else %>
	<div class="hero-unit">
	  <h1>Welcome</h1>
	  <p>Please register or log in to create, update and manage your learning jounals.</p>
	</div>
	<p><%= link_to "Log in", :controller => "account", :action => "login" %></p>
	<p><%= link_to "Register", :controller => "account", :action => "register" %></p>
<% end %>