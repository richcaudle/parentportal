
<% content_for :head do %>
  <style>
    body { padding-top: 0px }
  </style>
<% end %>

<% content_for :content do %>
  <div class='row'>
    <div class='span3'>
      <%= render 'layouts/navigation' %>
    </div>
    <div class='span9'>
      <div class="container">
        <div class="pagecontent">
        <% if(notice) %>
          <div class="alert"><%= notice %></div>
        <% end %>
        <%= yield %>
        </div>
      </div>
    </div>
  </div>
  
<% end %>
<%= render template: "layouts/application" %>
