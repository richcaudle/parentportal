<div class="banner">
  <div class="banner-inner">
    <div class="item">
      <img src="/assets/handup.jpg" alt="">
      <div class="container">
        <div class="banner-caption">
          <h1>Any questions?</h1>
          <p class="lead">To find out more about <%= APP_NAME %> please use the details below to get in touch.</p>
        </div>
      </div>
    </div>
  </div>
</div>
<div class="container marketing">
  <div class="content">
    <h1>Contact Us</h1>

    <%= form_tag("contact_action", method: "post") do %>
      <%= label_tag(:name, "Name:") %>
      <%= text_field_tag(:name) %>
      <%= label_tag(:email, "Email address:") %>
      <%= text_field_tag(:email) %>
      <%= label_tag(:message, "Message:") %>
      <%= text_area_tag(:message) %><br/>
      <%= submit_tag("Submit") %>
    <% end %>

  </div>
</div>
